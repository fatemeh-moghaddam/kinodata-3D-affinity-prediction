universe = docker
docker_image = gjoschka/kinodata3d-pytorch:24.02
executable = train_generic.sh
arguments = $(script) $(split) $(rmsd) $(model) $(index) jgross
output = train_kinodata.$(ClusterID).$(ProcId).out
error = train_kinodata.$(ClusterID).$(ProcId).err
log = train_kinodata.$(ClusterID).log
should_transfer_files   = YES
when_to_transfer_output = ON_EXIT
request_GPUs = 1
request_CPUs = 32
request_memory = 64G
requirements = UidDomain == "cs.uni-saarland.de" && machine != "fulla.cs.uni-saarland.de"
+WantGPUHomeMounted = true
queue index, model, rmsd, script, split from (
   0, cgnn.yaml, 2, train_sparse_transformer, random-k-fold
)
