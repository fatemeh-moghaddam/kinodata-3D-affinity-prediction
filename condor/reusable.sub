universe = docker
docker_image = gjoschka/kinodata3d-frompytorch:2.3.0-cuda12.1
executable = create_dataset.sh
output = generate_dataset.$(ClusterId).$(ProcId).out
error = generate_dataset.$(ClusterId).$(ProcId).err
log = generate_dataset.$(ClusterId).log
should_transfer_files   = YES
when_to_transfer_output = ON_EXIT
request_GPUs = 0
request_CPUs = 32
request_memory = 128G
requirements = UidDomain == "cs.uni-saarland.de"
+WantGPUHomeMounted = true
queue 1
